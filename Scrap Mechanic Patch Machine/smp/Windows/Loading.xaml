<Window x:Class="smp.Loading"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" WindowStartupLocation="CenterScreen" WindowStyle="None" LostFocus="Window_LostFocus"
        Title="Loading" Height="75" Width="300" ResizeMode="NoResize" Loaded="Window_Loaded">
    <Border BorderBrush="#FF000000" BorderThickness="1">
        <Grid>
            <TextBox Name="Status" Margin="10,10,10,40" VerticalContentAlignment="Center" BorderThickness="0" IsReadOnly="True">Loading critical game and patch information...</TextBox>
            <ProgressBar Name="Progress" Value="0" Margin="10,40,10,10" IsIndeterminate="True" />
        </Grid>
    </Border>
</Window>
